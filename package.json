{
  "name": "@patternfly/patternfly-component-schemas",
  "version": "1.0.0",
  "description": "JSON Schema metadata for PatternFly React components",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:components && npm run build:json",
    "build:components": "node scripts/generate-schemas.js component-metadata.json",
    "build:json": "node scripts/generate-json-schemas.js component-metadata.json",
    "dev": "node scripts/generate-schemas.js --watch",
    "clean": "rm -rf components/*/ schemas/ index.json.js",
    "rebuild": "npm run clean && npm run build",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "patternfly",
    "react",
    "components",
    "json-schema",
    "metadata"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "chokidar": "^3.5.3",
    "semantic-release": "^22.0.12"
  },
  "files": [
    "components/",
    "schemas/",
    "index.js",
    "index.json.js",
    "README.md"
  ],
  "exports": {
    ".": "./index.js",
    "./components/*": "./components/*/index.js",
    "./json": "./index.json.js",
    "./schemas": "./schemas/index.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patternfly/patternfly-component-schemas.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": ["main"]
  }
}
