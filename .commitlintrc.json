{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs", 
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "ci",
        "build"
      ]
    ],
    "scope-enum": [
      1,
      "always", 
      [
        "components",
        "schemas",
        "build",
        "ci",
        "docs",
        "deps",
        "release"
      ]
    ]
  }
}
